                <section class="content-header">
                    <div class="container-fluid">
                 
                            <div class="row mb-2">
                                <div class="col-sm-6">
                                    <h1>Transaksi Detail <%= transaction.name %></h1>
                                </div>
                                <div class="col-sm-6">
                                    <ol class="breadcrumb float-sm-right">

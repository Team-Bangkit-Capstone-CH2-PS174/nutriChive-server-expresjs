<%- include ../../partials/header.ejs %>
    <%- include ../../partials/navbar.ejs %>
        <%- include ../../partials/sidebar.ejs %>

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1>Form Ubah nominal " <%= nominal.coinName %> "</h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="/">Home</a></li>

                                    <li class="breadcrumb-item active"><a href="/nominal">Nominal</a></li>
                                    <li class="breadcrumb-item active">Ubah</li>
                                </ol>
                            </div>
                        </div>
                    </div><!-- /.container-fluid -->
                </section>

                <!-- Main content -->
                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="card card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title">Quick Example</h3>
                                    </div>
                                    <!-- /.card-header -->
                                    <!-- form start -->
                                    <form action="/nominal/edit/<%= nominal._id %>?_method=PUT" method="post">
                                        <div class="card-body">
                                            <div class="form-group">
                                                <label>Nama Coin</label>
                                                <select class="form-control select2" style="width: 100%;"name="coinName" required>
                                                    <option selected="selected">Pilih Coin</option>
                                                    <option name="Gold" <% if(nominal.coinName === "Gold"){ %>
                                                        selected
                                                    <%} %>>
                                                       
                                                    Gold
                                                </option>
                                                    <option name="Diamon" <% if(nominal.coinName === "Diamon" ){ %>
                                                            selected
                                                            <%} %>>
                                                       
                                                            Diamon</option>
                                                    <option name="Jewel" <% if(nominal.coinName ==="Jewel" ){ %>
                                                            selected
                                                            <%} %>
                                                            >
                                                       
                                                            Jewel
                                                    </option>
                                                  
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="coinQuantity">Jumlah Coin</label>
                                                <input type="number" name="coinQuantity" value="<%= nominal.coinQuantity %>" class="form-control" id="coinQuantity"
                                                    placeholder="Masukan Jumlah Harga">
                                            </div>
                                            <div class="form-group">
                                                <label for="price">Masukan Harga</label>
                                                <input type="number" name="price" value="<%= nominal.price %>"class="form-control" id="price" placeholder="Masukan Jumlah Harga">
                                            </div>

                                        </div>
                                        <!-- /.card-body -->

                                        <div class="card-footer">
                                            <button type="submit" class="btn btn-primary">Simpan</button>
                                        </div>
                                    </form>
                                </div>


                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.container-fluid -->
                </section>
                <!-- /.content -->
            </div>
            <%- include ../../partials/footer.ejs %>
                <%- include ../../partials/js.ejs %>
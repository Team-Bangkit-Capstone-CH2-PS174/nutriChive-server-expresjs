<table id="example2" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>No</th>
            <th>Type Pembayaran</th>
            <th>banks</th>
            <th>Status</th>
            <th>Aksi</th>

        </tr>
    </thead>
    <tbody>
        <% for(let i=0;i < payment.length; i++){ %>
            <tr>
                <td>
                    <%= i+1 %>
                </td>
                <td>
                    <%= payment[i].type %>
                </td>
              
                <td>
                    <% payment[i].banks.forEach(bank => { %>
                        <span class="badge badge-success">
                            <%= bank.name %> - <%= bank.nameBank %> <%= bank.noRekening %>
                        </span>
                    <% }) %>
                </td>
                <td>
                    <% if(payment[i].status === 'Y'){ %>
                        <span class="badge badge-success">
                            Aktif
                        </span>
                        <% } else { %>
                         <span class="badge badge-danger">
                            Tidak Aktif
                        </span>
                        <% } %>
                </td>
                
                <td>

                    <form action="/payment/status/<%= payment[i]._id %>?_method=PUT" method="post" style="display:inline-block">
                        <button class="btn btn-primary btn-sm" onclick="alert('yakin?');"><i class="fas fa-folder"></i>
                        <% if(payment[i].status==='Y' ){ %>
                           
                                Matikan

                            <% } else { %>
                               
                                    Hidupkan
                            
                                <% } %></button>
                    </form>
                      <a href="/payment/edit/<%= payment[i]._id %>" class="btn btn-warning btn-sm"><i
                                class="fas fa-pencil-alt"> Ubah</i></a>
                    <form style="display:inline-block" action="/payment/delete/<%= payment[i]._id %>?_method=DELETE" method="post">
                      
                        <button class="btn btn-danger  btn-sm" onclick="alert('yakin?');"><i class="fas fa-trash"> Hapus</i></button>
                    </form>
                </td>
            </tr>
            <% } %>
    </tbody>

</table>